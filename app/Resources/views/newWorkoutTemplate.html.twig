<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}{{ "NFQ #5" }}{% endblock %}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico')}}">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/bootstrap.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset('css/registerStyle.css') }}">
        <link rel="stylesheet" href="{{ asset('css/navigation.css') }}"/>
        <link rel="stylesheet" href="{{ asset('css/tags.css') }}"/>
    {% endblock %}
    {% block canonical_meta %}{% endblock %}
</head>
{% block body %}
    <section class="navbar navbar-default navbar-fixed-top sticky-navigation" role="navigation">
        <div class="container">

            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand"> <span style="color:orange"> HOME </span> COACH </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right main-navigation">
                    {% if app.user is not null %}
                        <li><a href="{{ path('app.createWorkout') }}" class="smoothScroll">SUKURTI PROGRAMÄ„</a></li>
                        <li><span class="loginInfo"> {{ 'layout.logged_in_as' | trans({'%username%': app.user.username}, 'FOSUserBundle') }} </span> </li>
                        <li> <a href="{{ path('fos_user_security_logout') }}">
                                <span class="glyphicon glyphicon-off"></span>
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a></li>
                    {% else %}
                        <li><a href="/login" class="smoothScroll">PRISIJUNGTI</a></li>
                    {% endif %}
                </ul>
            </div>

        </div>
    </section>
    <div class="container">
        {% block container %}
        <div class="container-fluid text-center">
            <div class="row content">
                <div class="col-md-2 text-left">

                </div>

                <div class="col-md-8 text-left">
                    {% block content %}
                    {% endblock %}
                </div>

                <div class="col-md-2 text-left">

                </div>

                {% endblock %}
            </div>
        </div>
    </div>
    {% block footer %}
        {% include "::inc/footer.html.twig" %}
    {% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/formMoves.js') }}"></script>
    <script src="{{ asset('js/tagsInForm.js') }}"></script>
{% endblock %}
{% endblock %}
</html>