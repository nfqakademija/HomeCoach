{% extends "::base2.html.twig" %}

{% block content %}

<section id="home" class="parallax-section">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <h1 class="home wow fadeInDown"> HOME <span class="homeSpan">COACH</span></h1>
                <a href="/login" class="btn btn-default smoothScroll wow fadeInUp" data-wow-delay="0.4s">PRISIJUNGTI</a>
                <a href="/register" class="btn btn-default smoothScroll wow fadeInUp" data-wow-delay="0.6s">REGISTRUOTIS</a>
                {% if app.user is not null %}
                    <a href="{{ path('app.createRegime') }}" class="btn btn-default smoothScroll wow fadeInUp" data-wow-delay="0.6s">SUKURTI PROGRAMĄ</a>
                {% else %}
                    <a class="btn btn-default smoothScroll wow fadeInUp" data-wow-delay="0.6s" title="Prisijunkite!" data-toggle="popover" data-content="Norėdami kurti programas turite turėti paskyrą." data-placement="bottom" data-trigger="hover"> SUKURTI PROGRAMĄ </a>
                {% endif %}
                <a href="" class="btn btn-default smoothScroll wow fadeInUp" data-wow-delay="0.6s">RODYTI PROGRAMAS</a>
            </div>

        </div>
    </div>
</section>
<div class="container">
    <div ng-app="regimeApp" ng-controller="regimesController">
        <div infinite-scroll='loadMore()' infinite-scroll-distance='0'>
            <div class="row no-collapse-1">
                <section class="col-md-4" ng-repeat="regime in regimes">
                    <div class="box">
                        <h2 style="font-family: Oswald"><a href="regimes/{[{ regime.id }]}"> {[{ regime.title }]}</a></h2>
                        <p> Autorius: <a href="showProfile/{[{ regime.creator_id }]}"> {[{ regime.username }]}</a></p>
                        <p> {[{ regime.data_created }]}</p>
                        <p class="description">{[{ regime.description | limitTo:150 }]}</p>
                        <a href="regimes/{[{ regime.id }]}" class="button">Daugiau</a>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
    <section class="navbar navbar-default navbar-fixed-top sticky-navigation" role="navigation">
        <div class="container">

            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>
                <a href="" class="navbar-brand"> <span style="color:orange"> HOME </span> COACH </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right main-navigation">
                    <li><a href="/login" class="smoothScroll">PRISIJUNGTI</a></li>
                    <li><a href="/register" class="smoothScroll">REGISTRUOTIS</a></li>
                    <li><a href="{{ path('app.createRegime') }}" class="smoothScroll">SUKURTI PROGRAMĄ</a></li>
                </ul>
            </div>

        </div>
    </section>


{% endblock %}