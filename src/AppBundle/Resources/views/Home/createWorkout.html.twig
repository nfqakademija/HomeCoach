{% extends 'newWorkoutTemplate.html.twig' %}
{% block title %}
    Nauja programa
{% endblock %}
{% block content %}
    <div class="form">
        {{ form_start(form) }}

        {% if not form.vars.valid %}
            <div class="alert alert-danger alert-dissmissible" role="alert">
                {{ form_errors(form.description) }}
            </div>
        {% endif %}
        <div class="field-wrap">
            <label>
                Pavadinimas <span class="req">*</span>
            </label>
            {{ form_widget(form.title, {'attr':{'autocomplete':'off'}}) }}
        </div>

        <h1 class="description"> Programos sudėtingumas </h1>
        <div id="form_difficulty" class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary veryEasy"> {{ form_widget(form.difficulty.0) }} Labai lengva</label>
            <label class="btn btn-primary easy"> {{ form_widget(form.difficulty.1) }} Lengva </label>
            <label class="btn btn-primary active medium"> {{ form_widget(form.difficulty.2,{'attr':{'checked':'checked'}}) }} Vidutinė</label>
            <label class="btn btn-primary hard"> {{ form_widget(form.difficulty.3) }} Sunki</label>
            <label class="btn btn-primary veryHard"> {{ form_widget(form.difficulty.4) }} Labai sunki</label>
        </div>
        {{ form_widget(form.difficulty, {'attr':{'class':'btn-group' , 'data-toggle':'buttons'}}) }}
        <h1 class="description"> Programos aprašymas <span style="color:yellow" class="req">*</span> </h1>
        <div class="field-wrap">
            {{ form_widget(form.description, {'attr':{'autocomplete':'off', 'rows':6}}) }}
        </div>

        <h1 class="description"> Programos tvarkaraštis </h1>
        <ul class="nav nav-pills radios">
            <li class="active"><a data-toggle="pill" href="#day1">Pirm.</a></li>
            <li><a data-toggle="pill" href="#day2">Antr.</a></li>
            <li><a data-toggle="pill" href="#day3">Treč.</a></li>
            <li><a data-toggle="pill" href="#day4">Ketv.</a></li>
            <li><a data-toggle="pill" href="#day5">Penkt.</a></li>
            <li><a data-toggle="pill" href="#day6">Šešt.</a></li>
            <li><a data-toggle="pill" href="#day7">Sekm.</a></li>
        </ul>
        <div class="tab-content" id="form_schedule">
            <div id="day1" class="tab-pane fade in active">
                <div class="field-wrap">
                    {{ form_widget(form.schedule.0, {'attr':{'autocomplete':'off','rows':5,'placeholder':'Pirmadienio tvarkaraštis'}}) }}
                </div>
            </div>
            <div id="day2" class="tab-pane fade">
                <div class="field-wrap">
                    {{ form_widget(form.schedule.1, {'attr':{'autocomplete':'off','rows':5,'placeholder':'Antradienio tvarkaraštis'}}) }}
                </div>
            </div>
            <div id="day3" class="tab-pane fade">
                <div class="field-wrap">
                    {{ form_widget(form.schedule.2, {'attr':{'autocomplete':'off','rows':5,'placeholder':'Trečiadienio tvarkaraštis'}}) }}
                </div>
            </div>
            <div id="day4" class="tab-pane fade">
                <div class="field-wrap">
                    {{ form_widget(form.schedule.3, {'attr':{'autocomplete':'off','rows':5,'placeholder':'Ketvirtadienio tvarkaraštis'}}) }}
                </div>
            </div>
            <div id="day5" class="tab-pane fade">
                <div class="field-wrap">
                    {{ form_widget(form.schedule.4, {'attr':{'autocomplete':'off','rows':5,'placeholder':'Penktadienio tvarkaraštis'}}) }}
                </div>
            </div>
            <div id="day6" class="tab-pane fade">
                <div class="field-wrap">
                    {{ form_widget(form.schedule.5, {'attr':{'autocomplete':'off','rows':5,'placeholder':'Šeštadienio tvarkaraštis'}}) }}
                </div>
            </div>
            <div id="day7" class="tab-pane fade">
                <div class="field-wrap">
                    {{ form_widget(form.schedule.6, {'attr':{'autocomplete':'off','rows':5,'placeholder':'Sekmadienio tvarkaraštis'}}) }}
                </div>
            </div>
        </div>
        <div style="color:white" class="row">
            <div class="col-md-4">
                <h2> Tipas </h2>
                <label class="labelForCheckbox" for="form_type_0">{{ form_widget(form.type.0, {'attr':{'class':'checkbox'}}) }} Jega </label>
                <label class="labelForCheckbox" for="form_type_1">{{ form_widget(form.type.1, {'attr':{'class':'checkbox'}}) }} Ištvermė </label>
                <label class="labelForCheckbox" for="form_type_2">{{ form_widget(form.type.2, {'attr':{'class':'checkbox'}}) }} Vikrumas </label>
                <label class="labelForCheckbox" for="form_type_3">{{ form_widget(form.type.3, {'attr':{'class':'checkbox'}}) }} Svorio metimas </label>
                <label class="labelForCheckbox" for="form_type_4">{{ form_widget(form.type.4, {'attr':{'class':'checkbox'}}) }} Svorio priauginimas </label>
            </div>
            <div class="col-md-4">
                <h2> Įranga </h2>
                <label class="labelForCheckbox" for="form_equipment_0">{{ form_widget(form.equipment.0, {'attr':{'class':'checkbox'}}) }} Kamuolys </label>
                <label class="labelForCheckbox" for="form_equipment_1">{{ form_widget(form.equipment.1, {'attr':{'class':'checkbox'}}) }} Dviratis </label>
                <label class="labelForCheckbox" for="form_equipment_2">{{ form_widget(form.equipment.2, {'attr':{'class':'checkbox'}}) }} Vienaratis </label>
                <label class="labelForCheckbox" for="form_equipment_3">{{ form_widget(form.equipment.3, {'attr':{'class':'checkbox'}}) }} Vienaragis </label>
            </div>
            <div class="col-md-4">
                <h2> Raumenys </h2>
                <label class="labelForCheckbox" for="form_muscle_group_0">{{ form_widget(form.muscle_group.0, {'attr':{'class':'checkbox'}}) }} Nugara </label>
                <label class="labelForCheckbox" for="form_muscle_group_1">{{ form_widget(form.muscle_group.1, {'attr':{'class':'checkbox'}}) }} Pečiai </label>
                <label class="labelForCheckbox" for="form_muscle_group_2">{{ form_widget(form.muscle_group.2, {'attr':{'class':'checkbox'}}) }} Krūtinė </label>
                <label class="labelForCheckbox" for="form_muscle_group_3">{{ form_widget(form.muscle_group.3, {'attr':{'class':'checkbox'}}) }} Bicepsas </label>
                <label class="labelForCheckbox" for="form_muscle_group_4">{{ form_widget(form.muscle_group.4, {'attr':{'class':'checkbox'}}) }} Tricepsas </label>
                <label class="labelForCheckbox" for="form_muscle_group_5">{{ form_widget(form.muscle_group.5, {'attr':{'class':'checkbox'}}) }} Dilbis </label>
                <label class="labelForCheckbox" for="form_muscle_group_6">{{ form_widget(form.muscle_group.6, {'attr':{'class':'checkbox'}}) }} Pilvo presas </label>
                <label class="labelForCheckbox" for="form_muscle_group_7">{{ form_widget(form.muscle_group.7, {'attr':{'class':'checkbox'}}) }} Kojos </label>
            </div>
        </div>
        {{ form_widget(form.type) }}
        {{ form_widget(form.save, {'attr':{'class':'button button-block'}}) }}
        {{ form_end(form) }}
    </div>
{% endblock %}