{% extends "::base.html.twig" %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block content %}
    <nav class="searchNav">
        <div class="row">
            <form>
                <div class="col-md-3">
                    <input class="searchText" type="text" placeholder="Iveskite paieškos raktą" />
                </div>
                <div class="col-md-1">
                    <select>
                        <option>1</option>
                        <option>2</option>
                        <option selected="selected">3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="submit" value="Ieskoti" />
                </div>
            </form>
        </div>
    </nav>
    <div ng-app="regimeApp" ng-controller="regimesController">
        <div class="clearfix single_content" ng-repeat="regime in regimes | orderBy:'id':true">
            <div class="clearfix post_date floatleft">
                <div class="date">
                    <h3 ng-bind="regime.data_created | date:'d'"></h3>
                    <p ng-bind="regime.data_created | date:'MMMM'"></p>
                    <p ng-bind="regime.data_created | date:'yyyy'"></p>
                </div>
            </div>
            <div class="clearfix post_detail">
                <h2><a href="regimes/{[{ regime.id }]}"> {[{ regime.title }]} </a></h2>
                <div class="clearfix post-meta">
                    <p><i class="fa fa-user">Autorius:</i> <a href="showProfile/{[{ regime.creator.id }]}"> {[{ regime.creator.username }]}</a> <span><i class="fa fa-comment"></i> {[{ regime.comments.length }]} komentarai</span> <span><i class="fa fa-folder"></i> {[{ regime.difficulty | showDifficulty }]}</span></p>
                </div>
                <div class="clearfix post_excerpt">
                    <p>{[{ regime.description }]}</p>
                </div>
                <a href="activate/{[{ regime.id }]}" class="actionLink col-md-6"> Aktyvuoti programa</a>
                <a href="regimes/{[{ regime.id }]}" class="actionLink col-md-6"> Daugiau informacijos</a>
            </div>
        </div>
    </div>
{% endblock %}
