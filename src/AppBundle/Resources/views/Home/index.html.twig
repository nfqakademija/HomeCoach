{% extends "::base.html.twig" %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block content %}
    <nav class="searchNav">
        <div class="row">
            <form>
                <div class="col-md-3">
                    <input class="searchText" type="text" placeholder="Iveskite paieškos raktą" />
                </div>
                <div class="col-md-1">
                    <select>
                        <option>1</option>
                        <option>2</option>
                        <option selected="selected">3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="submit" value="Ieskoti" />
                </div>
            </form>
        </div>
    </nav>
    <div ng-app="regimeApp" ng-controller="regimesController">
        <hr>
        <div class="program row" ng-repeat="regime in regimes">
            <h2> <span class="programName">{[{ regime.title }]}</span> <span class="coachInfo"> Treneris: <a href=""> Vardas/Pavarde </a></span> </h2>
            <hr>
            <p> {[{ regime.description }]}</p>
            <div class="row buttonRow">
                <div class="col-md-12">
                    <a href="regimes/{[{ regime.id }]}" class="actionLink col-md-4"> Daugiau informacijos</a>
                    <a href="activate/{[{ regime.id }]}" class="actionLink col-md-4"> Aktyvuoti programa</a>
                    <a href="comment/{[{ regime.id }]}" class="actionLink col-md-4"> Komentuoti</a>
                </div>
            </div>
        </div>
        <hr>
    </div>
{% endblock %}
