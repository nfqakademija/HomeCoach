{% extends "::base.html.twig" %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block content %}
    <nav class="searchNav">
        <div class="row">
            <form>
                <div class="col-md-3">
                    <input class="searchText" type="text" placeholder="Iveskite paieškos raktą" />
                </div>
                <div class="col-md-1">
                    <select>
                        <option>1</option>
                        <option>2</option>
                        <option selected="selected">3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="submit" value="Ieskoti" />
                </div>
            </form>
        </div>
    </nav>
    <div ng-app="regimeApp" ng-controller="regimesController">
        <div class="clearfix single_content" ng-repeat="regime in regimes | orderBy:'id':true">
            <div class="clearfix post_date floatleft">
                <div class="date">
                    <h3>27</h3>
                    <p>January</p>
                </div>
            </div>
            <div class="clearfix post_detail">
                <h2><a href="regimes/{[{ regime.id }]}"> {[{ regime.title }]} </a></h2>
                <div class="clearfix post-meta">
                    <p><span><i class="fa fa-user"></i> {[{ regime.user.username }]}</span> <span><i class="fa fa-clock-o"></i> 20 Jan 2014</span> <span><i class="fa fa-comment"></i> 4 comments</span> <span><i class="fa fa-folder"></i> Category</span></p>
                </div>
                <div class="clearfix post_excerpt">
                    <img src="images/thumb.png" alt=""/>
                    <p>{[{ regime.description }]}</p>
                </div>
                <a href="comment/{[{ regime.id }]}" class="actionLink col-md-4"> Komentuoti</a>
                <a href="activate/{[{ regime.id }]}" class="actionLink col-md-4"> Aktyvuoti programa</a>
                <a href="regimes/{[{ regime.id }]}" class="actionLink col-md-4"> Daugiau informacijos</a>
            </div>
        </div>
    </div>
{% endblock %}
